<div class="d-flex justify-content-between align-items-center mb-4">
  <h1>Results for <%= course.name %></h1>
  <a href="/results" class="btn btn-secondary">
    <i class="fas fa-arrow-left"></i> Back to Results
  </a>
</div>

<div class="card mb-4">
  <div class="card-header bg-primary text-white">
    <h5 class="mb-0">Course Information</h5>
  </div>
  <div class="card-body">
    <p><strong>Name:</strong> <%= course.name %></p>
  </div>
</div>

<% if (results.length > 0) { %>
  <div class="table-responsive">
    <table class="table table-striped table-hover">
      <thead class="table-dark">
        <tr>
          <th>Examination</th>
          <th>Member</th>
          <th>Date</th>
          <th>Marks</th>
          <th>Status</th>
          <th>Action</th>
        </tr>
      </thead>
      <tbody>
        <% results.forEach(result => { %>
          <tr>
            <td><%= result.examination.name %></td>
            <td><%= result.member.name %></td>
            <td><%= new Date(result.endTime).toLocaleDateString() %></td>
            <td><%= result.totalMarksObtained %>/<%= result.examination.totalMarks %></td>
            <td>
              <% if (result.isPassed) { %>
                <span class="badge bg-success">Passed</span>
              <% } else { %>
                <span class="badge bg-danger">Failed</span>
              <% } %>
            </td>
            <td>
              <a href="/results/<%= result._id %>" class="btn btn-primary btn-sm">
                <i class="fas fa-eye"></i> View
              </a>
            </td>
          </tr>
        <% }); %>
      </tbody>
    </table>
  </div>
<% } else { %>
  <div class="alert alert-info">
    No examination results found for this course.
  </div>
<% } %>